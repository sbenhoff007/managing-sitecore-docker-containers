@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecon.Foundation.SitecoreHelperExtensions
@using Sitecon.Feature.Events
@model Sitecon.Feature.Events.Models.Speaker

<div class="row">
    <div class="col-12 col-md-5">@Html.Sitecore().Field(Sitecon.Feature.Events.Templates.Speaker.Fields.SpeakerImage, new { @class = "rounded-soft img-fluid" })</div>
    <div class="col pl-md-0 mt-1 mt-md-0">
        <h5 class="text-uppercase text-base font-weight-extra-bold mb-0 mt-1 mt-lg-0">@Html.Sitecore().Field(Sitecon.Feature.Events.Templates.Speaker.Fields.SpeakerName)</h5>
        <p class="fs-0 text-uppercase font-weight-extra-bold text-500 mb-1">@Html.Sitecore().Field(Sitecon.Feature.Events.Templates.Speaker.Fields.SpeakerTitle)</p>
        <div class="col pl-0 fs-0">
            @if (Sitecore.Context.PageMode.IsExperienceEditor)
            {
                @Html.Sitecore().BeginField(Sitecon.Feature.Events.Templates.Speaker.Fields.SpeakerTwitterUrl.ToString(), new { @class = "text-400", DisableWebEdit = false })
                <span class="fab fa-twitter"></span>
                @Html.Sitecore().EndField()

                @Html.Sitecore().BeginField(Sitecon.Feature.Events.Templates.Speaker.Fields.SpeakerLinkedInUrl.ToString(), new { @class = "text-400 mx-2", DisableWebEdit = false })
                <span class="fab fa-linkedin-in"></span>
                @Html.Sitecore().EndField()

                @Html.Sitecore().BeginField(Sitecon.Feature.Events.Templates.Speaker.Fields.SpeakerWebsiteUrl.ToString(), new { @class = "text-400", DisableWebEdit = false })
                <span class="fas fa-at"></span>
                @Html.Sitecore().EndField()
            }
            else
            {
                if (!string.IsNullOrEmpty(Model.SpeakerTwitterUrl))
                {
                    <a class="text-400" href="@Model.SpeakerTwitterUrl" target="_blank"><span class="fab fa-twitter"></span></a>
                }

                if (!string.IsNullOrEmpty(Model.SpeakerLinkedInUrl))
                {
                    <a class="text-400 mx-2" href="@Model.SpeakerLinkedInUrl" target="_blank"><span class="fab fa-linkedin-in"></span></a>
                }

                if (!string.IsNullOrEmpty(Model.SpeakerWebsiteUrl))
                {
                    <a class="text-400" href="@Model.SpeakerWebsiteUrl" target="_blank"><span class="fas fa-at"></span></a>
                }
            }
        </div>
        <p class="mt-2 text-lowercase font-italic mb-0">@Html.Sitecore().Field(Sitecon.Feature.Events.Templates.Speaker.Fields.SpeakerDescription)</p>
    </div>
</div>

